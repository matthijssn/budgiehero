{
  "name": "budgiehero",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bootstrap": "npm run ci:install && npm run build",
    "ci:install": "npm ci --workspaces",
    "lint": "npm run lint -w apps/api",
    "test": "npm run test -w apps/api",
    "build": "npm run build -w apps/api",
    "dev": "npm run dev -w apps/api"
  }
}